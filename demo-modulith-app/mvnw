set -euf

MAVEN_HOME=""
BASE_DIR="$(cd "$(dirname "$0")"; pwd -P)"
WRAPPER_DIR="$BASE_DIR/.mvn/wrapper"
WRAPPER_JAR="$WRAPPER_DIR/maven-wrapper.jar"
WRAPPER_PROPERTIES="$WRAPPER_DIR/maven-wrapper.properties"

if [ ! -f "$WRAPPER_PROPERTIES" ]; then
  echo "Cannot locate $WRAPPER_PROPERTIES" >&2
  exit 1
fi

if [ ! -f "$WRAPPER_JAR" ] || [ ! -s "$WRAPPER_JAR" ]; then
  if command -v wget >/dev/null 2>&1; then
    wget -q -O "$WRAPPER_JAR" "$(grep '^wrapperUrl' "$WRAPPER_PROPERTIES" | cut -d'=' -f2)"
  elif command -v curl >/dev/null 2>&1; then
    curl -fsSL "$(grep '^wrapperUrl' "$WRAPPER_PROPERTIES" | cut -d'=' -f2)" -o "$WRAPPER_JAR"
  else
    echo "No downloader available to fetch Maven wrapper" >&2
    WRAPPER_JAR=""
  fi
fi

if [ "${WRAPPER_JAR}" = "" ] || [ ! -s "$WRAPPER_JAR" ]; then
  if command -v mvn >/dev/null 2>&1; then
    exec mvn "$@"
  fi
  echo "Maven wrapper JAR missing and mvn not available" >&2
  exit 1
fi

JAVA_CMD="java"
if [ "${JAVA_HOME-}" != "" ]; then
  JAVA_CMD="$JAVA_HOME/bin/java"
fi

exec "$JAVA_CMD" -classpath "$WRAPPER_JAR" org.apache.maven.wrapper.MavenWrapperMain "$@"
